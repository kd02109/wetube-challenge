extends ../partials/layout
block content 
    form(method="post")
        input(name="title",type="text",required=true,placeholder="Write Story Title" value=`${movie.title}`)
        input(name="rating",type="text",required=true,placeholder="Write Rating 0~10" value=`${movie.rating}`)
        input(name="hashtag",type="hasgtag",required=true,placeholder="Write Hashtag(,)" value=`${movie.genres}`)
        input(name="description",type="text",required=true,placeholder="Write Description" value=`${movie.summary}`)
        input(name="year",type="number",required=true,placeholder="Write release year" value=`${movie.year}`)
        button EDIT STORY