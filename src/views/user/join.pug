extends ../partials/layout
block content 
    div 
        if errorMessage
            h2=errorMessage
            
    form(method="post")
        input(name="name",type="text",required=true,placeholder="Write name")
        input(name="email",type="email",required=true,placeholder="Write email")
        input(name="id",type="text",required=true,placeholder="Write ID")
        input(name="password",type="password",required=true,placeholder="Write Password")
        input(name="passwordCheck",type="password",required=true,placeholder="Check Password")
        button SUBMIT

    div 
        span Do you have a account?
            a(href="/login") Please LOGIN! 